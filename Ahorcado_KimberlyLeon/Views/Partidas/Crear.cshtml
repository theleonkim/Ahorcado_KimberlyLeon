@model Ahorcado_KimberlyLeon.Models.Partida

@{
    ViewBag.Title = "Crear Partida";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Jugar", "Partidas", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        @if (ViewBag.MensajeError != null)
        {
            <div class="alert alert-danger">@ViewBag.MensajeError</div>
        }

        <div class="form-group">
            <label class="control-label col-md-2">Seleccione un jugador</label>
            <div class="col-md-10">
                @Html.DropDownList("JugadorId", ViewBag.JugadorId as SelectList, "Seleccionar Jugador", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Seleccione el nivel</label>
            <div class="col-md-10">
                <select name="Nivel" class="form-control">
                    <option value="Facil">Fácil</option>
                    <option value="Normal">Normal</option>
                    <option value="Dificil">Difícil</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Iniciar Partida" class="btn btn-primary" />
            </div>
        </div>
    </div>
}